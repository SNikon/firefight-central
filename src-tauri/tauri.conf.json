{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Firefight Central",
    "version": "1.6.5"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "scope": ["$RESOURCE/*"]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "setSize": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.torii.firefight",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "resources/**/*"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://firebasestorage.googleapis.com/v0/b/torii-firefight.appspot.com/o/update_manifest.json?alt=media"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDI4RUY3MEI0Rjg4NEQxREQKUldUZDBZVDR0SER2S0VjdWdmM3NTNmMreEVEU3FUemY3OWVTUjBGR1h4RWE5bHhyTEhYRkpEaDgK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "maximized": true,
        "title": "Firefight Central",
        "width": 800,
        "height": 600
      }
    ]
  }
}
